<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
<%= link_to "Back to all cocktails", root_path %><br>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<h3>Recipe</h3>
<% @cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient.name %></p>
    <p><%= dose.description %></p>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
    <% end %>
<% end %>

